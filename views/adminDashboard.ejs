<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui/dist/semantic.min.css">
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui/dist/semantic.min.js"></script>
</head>
<body>
    <div class="ui container">
        <h2 class="ui header">Admin Dashboard</h2>
        <table class="ui celled table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% nominees.forEach(nominee => { %>
                    <tr>
                        <td><%= nominee.name %></td>
                        <td><%= nominee.category %></td>
                        <td><img src="<%= nominee.image %>" alt="<%= nominee.name %>" style="width: 50px;"></td>
                        <td>
                            <a href="/vote/<%= encodeURIComponent(nominee.name.replace(/\s+/g, '-').toLowerCase()) %>">Vote Link</a>
                            <a href="/admin/edit/<%= nominee._id %>">Edit</a>
                            <a href="/admin/delete/<%= nominee._id %>">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
