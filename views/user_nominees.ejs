<!DOCTYPE html>
<html>
<head>
    <title>Nominees</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui/dist/semantic.min.css">
    <style>
        .ui.card img {
            border-radius: 50%;
            height: 150px;
            width: 150px;
            object-fit: cover;
        }
        .ui.container {
            margin-top: 20px;
        }
        .ui.header {
            color: #D4AF37;
        }
        .ui.button.primary {
            background-color: #D4AF37;
            color: #000000;
        }
        .ui.button.primary:hover {
            background-color: #c49b2e;
        }
    </style>
</head>
<body>
    <div class="ui container">
        <h2 class="ui header">Nominees</h2>
        <div class="ui three stackable cards">
            <% nominees.forEach(nominee => { %>
                <div class="card">
                    <div class="image">
                        <% if (nominee.image) { %>
                            <img src="/<%= nominee.image %>" alt="<%= nominee.name %>">
                        <% } else { %>
                            <div class="ui placeholder">
                                <div class="image"></div>
                            </div>
                        <% } %>
                    </div>
                    <div class="content">
                        <div class="header"><%= nominee.name %></div>
                        <div class="meta"><%= nominee.category %></div>
                        <div class="description">
                            <a href="<%= nominee.link %>" class="ui button primary">Vote</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
