                    thankYouMessage.style.display = 'block';
                    form.reset();
                    setTimeout(() => {
                        thankYouMessage.style.display = 'none';
                    }, 5000);
                }, 2000);
            });


        document.getElementById('menu-toggle').addEventListener('click', function() {
