<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>INTERNATIONAL EVENT USHER’S CONFERENCE</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #333;
            color: #fff;
            padding: 10px 0;
        }
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        .logo img {
            height: 50px;
        }
        .menu-toggle {
            display: none;
            flex-direction: column;
            cursor: pointer;
        }
        .menu-toggle .hamburger {
            width: 25px;
            height: 3px;
            background-color: #fff;
            margin: 5px 0;
        }
        .nav-links {
            list-style: none;
            display: flex;
            padding: 0;
        }
        .nav-links li {
            margin: 0 15px;
        }
        .nav-links a {
            color: #fff;
            text-decoration: none;
            font-size: 16px;
        }
        .bg {
            background: url('/images/Tips on managing ushers for Ugandan corporate Events.jpeg') no-repeat center center/cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: #fff;
            position: relative;
        }
        .bg .content {
            position: relative;
            z-index: 1;
        }
        .bg h1 {
            font-size: 3em;
        }
        .bg button a {
            color: #fff;
            text-decoration: none;
        }
        .container {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            margin: 20px auto;
            max-width: 1200px;
        }
        .box {
            flex: 1;
            margin: 10px;
            padding: 20px;
            background-color: #f4f4f4;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .wrapper {
            padding: 20px;
            text-align: center;
            background-color: #fff;
        }
        .wel p, .vote p {
            text-align: justify;
        }
        .vote .slide {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .vote .slider {
            display: flex;
            overflow: hidden;
            width: 100%;
            max-width: 600px;
            position: relative;
        }
        .vote .slider img {
            width: 100%;
            height: auto;
            flex-shrink: 0;
            transition: transform 0.5s ease-in-out;
        }
        .poll {
            padding: 20px;
            background-color: #f4f4f4;
            border-radius: 8px;
            max-width: 600px;
            margin: 20px auto;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .poll form {
            display: flex;
            flex-direction: column;
        }
        .poll form label {
            margin: 10px 0 5px;
        }
        .poll form input, .poll form textarea, .poll form button {
            padding: 10px;
            margin-bottom: 10px;
        }
        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px;
        }
        .footer-top {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .footer-top img {
            height: 50px;
            margin: 10px 0;
        }
        .footer-bottom {
            margin-top: 20px;
        }
        .social-icons {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }
        .social-icons a {
            color: #fff;
            font-size: 20px;
            margin: 0 10px;
        }
        .loader {
            display: none;
            border: 16px solid #f3f3f3;
            border-radius: 50%;
            border-top: 16px solid #3498db;
            width: 120px;
            height: 120px;
            animation: spin 2s linear infinite;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 9999;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        @media (max-width: 768px) {
            .nav-links {
                display: none;
                flex-direction: column;
                width: 100%;
                background-color: #333;
                position: absolute;
                top: 70px;
                left: 0;
                text-align: center;
            }
            .nav-links.active {
                display: flex;
            }
            .menu-toggle {
                display: flex;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <img src="/images/TEUC logo.png" alt="logo">
            </div>
            <div class="menu-toggle" id="menu-toggle">
                <div class="hamburger"></div>
                <div class="hamburger"></div>
                <div class="hamburger"></div>
            </div>
            <ul class="nav-links" id="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
    </header>
    <section class="bg" id="home">
        <div class="content">
            <h1>INTERNATIONAL EVENT USHER’S CONFERENCE</h1>
            <p>Kindly click to Register for the INTERNATIONAL EVENT USHER’S CONFERENCE 2.0</p>
            <button type="button"><a href="/user/register">Summit Registration</a></button>
        </div>
    </section>
    <div class="container">
        <div class="box technology">
            <h2>Excellence in Service</h2>
            <p>At the International Event Usher’s Conference, we are committed to promoting the highest standards of service and professionalism in the ushering industry. We believe that excellence is achieved through continuous learning, skill enhancement, and a dedication to delivering exceptional experiences for every guest.</p>
        </div>
        <div class="box specials">
            <h2>Innovation and Growth</h2>
            <p>We stand for innovation and the ongoing growth of our industry. By providing a platform for the exchange of ideas, best practices, and emerging trends, we empower ushers to adapt to the ever-changing landscape of event management. Our conference features workshops, seminars, and keynote sessions that inspire creativity and forward-thinking solutions.</p>
        </div>
        <div class="box equipment">
            <h2>Community and Collaboration</h2>
            <p>We believe in the power of community and the importance of collaboration. The International Event Usher’s Conference fosters a sense of belonging and mutual support among its participants. We encourage networking and the building of meaningful relationships that extend beyond the conference, creating a global network of professionals who support and uplift each other.</p>
        </div>
    </div>
    <div class="wrapper" id="about">
        <div class="wel">
            <h1>About Us</h1>
            <p>International Event Usher’s Conference is the premier global gathering for professional event ushers and hospitality experts. Our conference brings together seasoned professionals, industry leaders, and aspiring ushers from around the world to share knowledge, foster networking, and celebrate the art of event ushering. With a focus on excellence, innovation, and community, the International Event Usher’s Conference is dedicated to elevating the standards and practices of event ushering to new heights.</p>
            <p>Join us at the International Event Usher’s Conference and become part of a community that values excellence, embraces innovation, and thrives on collaboration. Together, we can shape the future of event ushering and set new standards of service for the industry.</p>
            <button><a href="/user/register">Register Now</a></button>
        </div>
        <div class="vote slide">
            <h1>Vote For the Best in the Industry</h1>
            <div class="slider">
                <img src="/images/WhatsApp Image 2024-07-23 at 16.08.00_2b4317ab.jpg" alt="Voting Image 1">
                <img src="/images/WhatsApp Image 2024-07-23 at 16.08.04_31a1276f.jpg" alt="Voting Image 2">
                <img src="/images/WhatsApp Image 2024-07-24 at 14.32.27_ee827060.jpg" alt="Voting Image 3">
                <img src="/images/WhatsApp Image 2024-07-24 at 14.32.35_7e62d83a.jpg" alt="Voting Image 4">
                <button type="button"><a href="/vote">Vote Now</a></button>
            </div>
        </div>
    </div>
    <div class="poll" id="contact">
        <h1>Contact Us</h1>
        <form>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <label for="message">Message:</label>
            <textarea id="message" name="message" rows="4" required></textarea>
            <button type="submit">Submit</button>
        </form>
    </div>
    <footer>
        <div class="footer-top">
            <h2>Business Summit 2024</h2>
            <p>Register Now</p>
            <img src="/images/TEUC logo.png" alt="TEUC Logo">
            <button type="button"><a href="/user/register">INTERNATIONAL EVENT USHER’S CONFERENCE Summit 2.0</a></button>
            <div class="social-icons">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 TEUC. Design By Afe Tech</p>
        </div>
    </footer>
    <div class="loader" id="loader"></div>
    <script src="/js/js.js"></script>
    <script>
        const menuToggle = document.getElementById('menu-toggle');
        const navLinks = document.getElementById('nav-links');

        menuToggle.addEventListener('click', () => {
            navLinks.classList.toggle('active');
        });

        document.querySelector('.poll form').addEventListener('submit', function(event) {
            event.preventDefault();
            document.getElementById('loader').style.display = 'block';

            setTimeout(() => {
                document.getElementById('loader').style.display = 'none';
                alert('Your message has been sent!');
                this.reset();
            }, 2000); // Simulate a delay for email sending
        });

        // Slider functionality
        const slider = document.querySelector('.vote .slider');
        const images = slider.querySelectorAll('img');
        let currentIndex = 0;

        function showImage(index) {
            const offset = -index * 100;
            slider.style.transform = `translateX(${offset}%)`;
        }

        function nextImage() {
            currentIndex = (currentIndex + 1) % images.length;
            showImage(currentIndex);
        }

        function prevImage() {
            currentIndex = (currentIndex - 1 + images.length) % images.length;
            showImage(currentIndex);
        }

        setInterval(nextImage, 3000); // Change image every 3 seconds
    </script>
</body>
</html>
