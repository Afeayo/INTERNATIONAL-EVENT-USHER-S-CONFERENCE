<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nominees</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui/dist/semantic.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .ui.container {
            margin-top: 20px;
            padding: 20px;
            border-radius: 8px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .ui.header {
            color: #D4AF37;
            text-align: center;
            margin-bottom: 30px;
        }
        .ui.card {
            box-shadow: none;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            transition: box-shadow 0.3s;
        }
        .ui.card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .ui.card img {
            border-radius: 50%;
            height: 150px;
            width: 150px;
            object-fit: cover;
            display: block;
            margin: 20px auto 10px;
        }
        .ui.card .content {
            text-align: center;
            padding: 10px;
        }
        .ui.card .header {
            font-size: 1.2em;
            margin-bottom: 5px;
        }
        .ui.card .meta {
            font-size: 0.9em;
            color: #757575;
            margin-bottom: 15px;
        }
        .ui.button.primary {
            background-color: #D4AF37;
            color: #000000;
        }
        .ui.button.primary:hover {
            background-color: #c49b2e;
        }
        .ui.pagination.menu .active.item {
            background-color: #D4AF37;
            color: #000000;
        }
        @media (max-width: 768px) {
            .ui.card img {
                height: 100px;
                width: 100px;
            }
            .ui.three.cards>.card {
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="ui container">
        <h2 class="ui header">Nominees </h2>
        <% if (error) { %>
            <div class="ui negative message">
                <p><%= error %></p>
            </div>
        <% } %>
        <div class="ui three stackable cards">
            <% nominees.forEach(nominee => { %>
                <div class="card">
                    <div class="image">
                        <% if (nominee.image) { %>
                            <img src="/<%= nominee.image %>" alt="<%= nominee.name %>">
                        <% } else { %>
                            <div class="ui placeholder">
                                <div class="image"></div>
                            </div>
                        <% } %>
                    </div>
                    <div class="content">
                        <div class="header"><%= nominee.name %></div>
                        <div class="meta">Category: <%= nominee.category %></div>
                        <div class="description">
                            <form class="ui form" action="/vote" method="POST">
                                <input type="hidden" name="nomineeId" value="<%= nominee._id %>">
                                <div class="field">
                                    <input type="text" name="voterName" placeholder="Your Name" required>
                                </div>
                                <div class="field">
                                    <input type="email" name="voterEmail" placeholder="Your Email" required>
                                </div>
                                <button class="ui button primary" type="submit">Vote</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="ui centered grid">
            <div class="ui pagination menu">
                <% if (currentPage > 1) { %>
                    <a class="item" href="?page=<%= currentPage - 1 %>">Previous</a>
                <% } %>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a class="item <%= currentPage === i ? 'active' : '' %>" href="?page=<%= i %>"><%= i %></a>
                <% } %>
                <% if (currentPage < totalPages) { %>
                    <a class="item" href="?page=<%= currentPage + 1 %>">Next</a>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/semantic-ui/dist/semantic.min.js"></script>
</body>
</html>
